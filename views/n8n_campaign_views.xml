<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================= -->
    <!--       LIST VIEW           -->
    <!-- ========================= -->
    <record id="view_n8n_campaign_list" model="ir.ui.view">
        <field name="name">n8n.campaign.list</field>
        <field name="model">n8n.campaign</field>
        <field name="arch" type="xml">
            <list string="n8n Campaigns">
                <field name="name"/>
                <field name="target_model"/>
                <field name="webhook_url"/>
                <field name="delay_seconds"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="record_count" string="Matching Records"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!--       FORM VIEW           -->
    <!-- ========================= -->
    <record id="view_n8n_campaign_form" model="ir.ui.view">
        <field name="name">n8n.campaign.form</field>
        <field name="model">n8n.campaign</field>
        <field name="arch" type="xml">
            <form string="n8n Campaign">
                <sheet>

                    <!-- TOP GROUPS -->
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="target_model"/>
                            <field name="webhook_url"/>
                            <field name="delay_seconds"/>
                        </group>

                        <group string="Schedule">
                            <field name="is_active"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                        </group>
                    </group>

                    <!-- FILTER SECTION (like old UI) -->
                    <group string="Filter">
                        <!-- Domain builder: Filter / New Rule -->
                        <field name="filter_domain"
                               widget="domain"
                               options="{'model': 'crm.lead'}"/>

                        <!-- Matching record counter -->
                        <group>
                            <field name="record_count" readonly="1" string="Matching Records"/>
                        </group>
                    </group>

                    <!-- LOGS TAB -->
                    <notebook>
                        <page string="Logs">
                            <field name="log_ids" nolabel="1">
                                <list create="0" edit="0" delete="0">
                                    <field name="lead_id" string="Lead ID"/>
                                    <field name="name" string="Lead Name"/>
                                    <field name="email"/>
                                    <field name="status"/>
                                    <field name="http_status"/>
                                    <field name="sent_at"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!--          ACTION           -->
    <!-- ========================= -->
    <record id="action_n8n_campaign" model="ir.actions.act_window">
        <field name="name">n8n Campaigns</field>
        <field name="res_model">n8n.campaign</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ========================= -->
    <!--          MENU             -->
    <!-- ========================= -->
    <menuitem id="menu_n8n_root"
              name="n8n"
              parent="crm.crm_menu_root"
              sequence="50"/>

    <menuitem id="menu_n8n_campaign"
              name="Campaigns"
              parent="menu_n8n_root"
              action="action_n8n_campaign"
              sequence="10"/>

</odoo>
