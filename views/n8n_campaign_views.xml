<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_n8n_campaign_list" model="ir.ui.view">
        <field name="name">n8n.campaign.list</field>
        <field name="model">n8n.campaign</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="n8n Campaigns">
                <field name="name"/>
                <field name="target_model"/>
                <field name="webhook_url"/>
                <field name="delay_seconds"/>
                <field name="record_count"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_n8n_campaign_form" model="ir.ui.view">
        <field name="name">n8n.campaign.form</field>
        <field name="model">n8n.campaign</field>
        <field name="arch" type="xml">
            <form string="n8n Campaign">
                <header>
                    <button name="action_send_to_n8n"
                            type="object"
                            class="btn-primary"
                            string="Send to n8n"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="target_model"/>
                        <field name="webhook_url"
                               placeholder="Paste your n8n Webhook URL"/>
                        <field name="delay_seconds"
                               placeholder="0"
                               help="Delay in seconds between each record send."/>
                    </group>

                    <group string="Filter">
                        <field name="filter_domain"
                               widget="domain"
                               options="{'model': 'crm.lead'}"/>
                        <field name="record_count" readonly="1"/>
                    </group>

                    <!-- Logs table -->
                    <group string="Send Logs">
                        <field name="log_ids" readonly="1">
                            <tree create="0" edit="0" delete="0">
                                <field name="lead_odoo_id" string="ID"/>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="status"/>
                                <field name="http_status"/>
                                <field name="sent_at"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_n8n_campaign" model="ir.actions.act_window">
        <field name="name">n8n Campaigns</field>
        <field name="res_model">n8n.campaign</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu (top level) -->
    <menuitem id="menu_n8n_campaign_root"
              name="n8n Campaigns"
              action="action_n8n_campaign"
              sequence="50"/>
</odoo>
