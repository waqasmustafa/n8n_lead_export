<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_ai_call_campaign_list" model="ir.ui.view">
        <field name="name">ai_call.campaign.list</field>
        <field name="model">n8n.campaign</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="AI Call Campaigns">
                <field name="name"/>
                <field name="target_model"/>
                <field name="webhook_url"/>
                <field name="delay_seconds"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="is_active"/>
                <field name="record_count"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ai_call_campaign_form" model="ir.ui.view">
        <field name="name">ai_call.campaign.form</field>
        <field name="model">n8n.campaign</field>
        <field name="arch" type="xml">
            <form string="AI Call Campaign">

                <header>
                    <!-- Manual send button -->
                    <button name="action_send_to_n8n"
                            type="object"
                            class="btn-primary"
                            string="Send Calls"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="target_model"/>
                            <field name="webhook_url"
                                   placeholder="Paste your Webhook URL"/>
                        </group>
                        <group>
                            <!-- Toggle -->
                            <field name="is_active" widget="boolean_toggle"/>
                            <label for="is_active" string="Status"/>
                            <field name="delay_seconds"
                                   placeholder="0"
                                   help="Delay in seconds between each record send."/>
                            <!-- Start / End time fields -->
                            <field name="start_time"
                                   widget="float_time"
                                   help="Local time-of-day when this campaign may start sending."/>
                            <field name="end_time"
                                   widget="float_time"
                                   help="Local time-of-day when this campaign must stop sending."/>
                        </group>
                    </group>

                    <group string="Filter">
                        <field name="filter_domain"
                               widget="domain"
                               options="{'model': 'crm.lead'}"/>
                        <field name="record_count" readonly="1"/>
                    </group>

                    <!-- Simple logs display (let Odoo handle subview) -->
                    <notebook>
                        <page string="Logs">
                            <field name="log_ids" nolabel="1">
                                <list create="0" edit="0" delete="0">
                                    <field name="name" string="Lead Name"/>
                                    <field name="lead_tags" widget="many2many_tags"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="status"/>
                                    <field name="http_status"/>
                                    <field name="sent_at"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ai_call_campaign" model="ir.actions.act_window">
        <field name="name">AI Call</field>
        <field name="res_model">n8n.campaign</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu (top level) -->
    <menuitem id="menu_ai_call_campaign_root"
              name="AI Call Campaigns"
              action="action_ai_call_campaign"
              sequence="50"/>
</odoo>
